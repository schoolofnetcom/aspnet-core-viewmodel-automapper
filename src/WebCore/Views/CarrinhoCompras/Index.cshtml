@model WebCore.ViewModels.CarrinhoComprasViewModel

@{
    ViewData["Title"] = "Carrinho de Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Resumo do Carrinho de Compras</h2>
<p>
    @Model.Mensagem
</p>

<p>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Produtos)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Valor</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td><strong>TOTAL</strong></td>
                <td><strong>@Model.Total</strong></td>
            </tr>
        </tfoot>
    </table>
</p>
